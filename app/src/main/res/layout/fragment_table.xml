<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableFragment"
    android:layout_width="550dp"
    android:layout_height="match_parent"
    android:background="@drawable/bckg_rectangle_light"
    android:clickable="true"
    android:elevation="5dp">

    <RelativeLayout
        android:id="@+id/tableHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_tableHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/muli_bold"
            android:text="@string/tableHeader"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_closeTable"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:text="@string/closeTableButton" />

    </RelativeLayout>

    <ListView
        android:id="@+id/layout_seats"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/btn_addCustomer"
        android:layout_below="@+id/tableHeader"
        android:layout_marginBottom="21dp"
        android:background="#F8FDF2"
        android:columnCount="1">

    </ListView>

    <Button
        android:id="@+id/btn_addCustomer"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="34dp"
        android:text="@string/addSeatButton" />

</RelativeLayout>
